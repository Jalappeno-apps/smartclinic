    <div class="row">
      <div class="col-md-3 col-xs-6 text-center service-img outerbox">
        <%= image_tag('icons/care.svg')%>
        <h2 class="bold-font"> Kompleksowa <br> opieka </h2>
      </div>
      <div class="col-md-3 col-xs-6 text-center service-img outerbox">
        <%= image_tag('icons/record.svg')%>
        <h2 class="bold-font"> Szybka <br> diagnoza </h2>
      </div>

      <div class="col-md-3 col-xs-6 text-center service-img outerbox">
        <%= image_tag('icons/trust.svg')%>
        <h2 class="bold-font"> Dyskrecja <br> i profesjoonalizm </h2>
      </div>

      <div class="col-md-3 col-xs-6 text-center service-img outerbox">
        <%= image_tag('icons/communication.svg')%>
        <h2 class="bold-font"> Stały kontakt <br> z lekarzem prowadzacym </h2>
      </div>
    </div>
  </div>
</section>
<!-- SERVICES SECTION ENDS -->

<!-- COLUMNS SECTION -->
<section id="sexual">
  <div class="container">
    <div class="row flex-reverse-order-it">
      <div class="col-md-6">
        <div class="mobile-center">
          <span class="text-muted text-red">ZDROWIE SEKSUALNE</span>
        </div>
        <h1 class="header-heading"> 
          Dbaj o swoje<br>
          bezpieczństwo oraz<br>
          zdrowie swojego<br>
          partnera
        </h1>
        <ul class="points-red">
          <li>Profilaktyka HIV (PrEP, PEP)</li>
          <li>Ekspresowe testy chorób zakaźnych</li>
          <li>Planowanie szczepień niezbędnych dla utrzymania zdrowia(dospasowane do trybu życia)</li>
          <li>Szerroki zakres badań laboratoryjnych</li>
        </ul>
        <div style="display: flex; direction: column">
          <button class="btn btn-red my-2 my-sm-0" type="submit" style="margin-right: 10px">Umów wizytę</button>
          <button class="btn btn-outline-red my-2 my-sm-0" type="submit">Dowiedz się wizytę</button>
        </div>
      </div>
      <div class="col-md-6">
        <div class="image-overlay-wrapper">
          <%= image_tag('sexual_image.png', class: "img-fluid image-sections") %>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- COLUMNS SECTION ENDS -->

<section id="psychology">
