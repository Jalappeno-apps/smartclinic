<header class="header-main">
  <div class="container"> 
    <div class="row">
      <div class="col-md-5 align-self-center">
        <h1 class="header-heading"> 
            <%= t('header.title') %> 
            <% if locale.to_s == 'en' %> 
              <br> 
              <span id="typed" 
              data-attrs='{
              "sexual": "<%= t('header.sexual') %>" ,
              "psychological": "<%= t('header.psychology') %>",
              "physical": "<%= t('header.physical') %>"
              }'
              class="underline"></span>
            
            <% else %>
              <span id="typed" 
              data-attrs='{
              "sexual": "<%= t('header.sexual') %>" ,
              "psychological": "<%= t('header.psychology') %>",
              "physical": "<%= t('header.physical') %>"
              }'
              class="underline"></span> 
            <% end %>
        </h1>

        <p id="header-text">
          <%= t("header.header_text") %>
        </p>
        <div class="header-button"> 
          <button class="btn btn-brown my-2 my-sm-0" type="submit">
            <%= t('header.book_now') %></button>
        </div>
      </div>

      <div class="col-md-7" style="padding: 0px !important">
        <div class="header-images"> 
        </div>
      </div>

      <div class="col-md-12" id="header-mid-text">
        <div class="overlay-text text-center"> 
          <h1 class="header-heading mobile-center"> 
            <%= t('modern_med.title') %></h1>
          <div class="text-center" id="header-mid">
            <p class="text"> 
              <%= t('modern_med.content') %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
<!-- HEADER ENDS -->

<!-- SERVICES SECTION -->
<section id="services">
  <div class="container">
    <div class="row">
      <div class="col-md-3 col-xs-6 text-center service-img outerbox">
