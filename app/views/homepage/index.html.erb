      <div class="col-md-3 col-xs-6 text-center service-img outerbox">
        <%= image_tag('icons/communication.svg')%>
        <h3> <%= t('services.contact').html_safe %> </h3>
      </div>
    </div>
  </div>
</section>
<!-- SERVICES SECTION ENDS -->

<!-- COLUMNS SECTION -->
<section id="sexual" class="scroll-animations">
  <div class="container">
    <div class="row flex-reverse-order-it">
      <div class="col-md-6">
        <div class="mobile-center m-25-top">
          <span class="text-muted text-orange"><%= t('section.sexual.heading').upcase %></span>
        </div>
        <h1 class="header-heading"> 
          <%= t('section.sexual.title').html_safe %>
        </h1>
        <ul class="points-orange">
          <li><%= t('section.sexual.point_1')%></li>
          <li>Ekspresowe testy chorób zakaźnych</li>
          <li>Planowanie szczepień niezbędnych dla utrzymania zdrowia(dospasowane do trybu życia)</li>
          <li>Szerroki zakres badań laboratoryjnych</li>
        </ul>
        <div style="display: flex; direction: column">
          <button class="btn btn-orange my-2 my-sm-0" type="submit" style="margin-right: 10px"><%= t('section.book_now') %></button>
          <button class="btn btn-outline-orange my-2 my-sm-0" type="submit"><%= t('section.book_later') %></button>
        </div>
      </div>


      <div class="spacer s2"></div>
      <div id="trigger1" class="spacer s0"></div>


      <div class="col-md-6" id="reveal1">
        <div class="image-overlay-wrapper">
          <%= image_tag('sexual_image.png', id:"sexual_section_image", class: "img-fluid image-sections") %>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- COLUMNS SECTION ENDS -->

